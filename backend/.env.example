# ArxivScout 环境变量配置示例 (Environment Configuration Example)

# ===== 基础配置 (Base Config) =====
HOST=127.0.0.1
PORT=8000
FRONTEND_URL=http://localhost:5173
BACKEND_URL=http://localhost:8000

# ===== Supabase 配置 (Database Config) =====
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# ===== LLM 配置 (LLM Config) =====
# 可选: openrouter, dashscope, bohrium
LLM_PROVIDER=openrouter
OPENROUTER_API_KEY=your_openrouter_key
# 推荐模型
MODEL_CHEAP=qwen-plus
MODEL_PERFORMANCE=qwen3-max

# ===== 邮件配置 (Email Config - 163.com) =====
SMTP_SERVER=smtp.163.com
SMTP_PORT=465
SENDER_EMAIL=your_email@163.com
SENDER_PASSWORD=your_smtp_authorization_code
SENDER_NAME=ArxivScout
SMTP_TIMEOUT=30
BATCH_EMAIL_DELAY=2.0

# ===== 错误通知配置 (Error Notification) =====
ENABLE_ERROR_NOTIFICATIONS=true
ERROR_NOTIFICATION_EMAIL=admin@example.com

# ===== 工作流配置 (Workflow Config) =====
DAILY_REPORT_TIME=09:30
CATEGORIES=cs.CV,cs.LG,cs.CL,cs.AI
REPORT_PAPER_LIMIT=15
